//
// header
//
.post-header
  position relative
  &:after
    position absolute
    content " "
    bottom -1rem
    left 40%
    width 20%
    height 1px
    background $line-clr
    
.post-title 
  display block
  font-size 38px
  font-weight 200
  color rgba(0,0,0,.7)
  margin .5rem 0 2rem 0   
  
//post
//
.post-content
  margin 40px 0
//
// footer
//
.post-footer   
   position relative 
   padding 1rem 0 
   text-align right   
//
// button
//
.donate-btn,.share-btn 
  @extend $tags
  cursor pointer
  padding 4px 12px
  border-radius 50%  
 
    
//-------------donate
#donate-box  
  display none
  width 360px
  height 280px
  padding 20px 0
  position fixed
  left 50%
  top 50%
  margin-top  -160px
  margin-left -180px  
  border-radius 10px 
  z-index 999
  text-align center
  background $bgr
.donate-cancel
  position absolute
  top 8px
  right 24px
  width 12px
.donate-img-box
  width 200px
  margin 0 auto 
.donate-word
  display inline-block
  font-family $thin-font 
  font-weight 300
  margin 10px 0
  font-size 0.825rem
.donate-list
  padding-bottom 15px 
  height 30px
.donate-img 
  width 200px
  height auto 
  display none
//----- donate js
.donate-active
  color $thr-clr
//-------------share
.-mob-share
  display none    
  position absolute
  top -2.825rem
  right 0 
  padding 5px 8px
  border 1px solid $line-clr
  border-radius 999em
  
.-mob-share span
  padding 4px
  font-size 1.125rem
  cursor pointer
  opacity .7
  &:hover
    color $thr-clr 
  
//
// post-nav
// 
.post-nav    
    margin 1em 0 4em
    padding-bottom 1em
    overflow hidden  
    font-weight 300   
    font-size 1.2em  
    border-bottom 1px solid #eee       
    text-align center
.post-nav span
    font-size .95em
    padding 0 .5em 
    &:hover
      color $thr-clr      
   

     
//
// comment
//
#comment
    margin 1rem 0 4rem
    padding-bottom 1rem
    overflow hidden    
    border-bottom 1px solid #eee          
#comment div
    margin left     

.power,.vempty,.col-60
    visibility hidden

.vnick,.veditor,.vmail,.vempty,.vsubmit   
    font-family $font
    font-size 1rem 
    border-bottom 0 !important

.vsubmit      
    background-color #F5F6FA !important
    border 0 !important
    padding 0 3px !important
    color rgba(0,0,0,.5) !important
    font-weight 300 !important
    letter-spacing .3px
    &:hover 
      color $thr-clr !important
.vcard
    padding 5px 0  0 20px !important  

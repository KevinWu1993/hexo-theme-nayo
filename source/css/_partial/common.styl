///
// info
//

.post-time,.post-words,.post-visitor,.post-meta
  @extend $oneline  
  font-size .9rem 
  color rgba(0,0,0,.6)   
  margin-right 24px
  padding .8em 0
  font-family $time-font 
.category-link,.tag-link
    font-size .825rem 
    font-weight 300 
    font-family $font
    &:visited,&:active,&:link
      color rgba(0,0,0,1)     
    &:hover 
     color $thr-clr
  

// paginator
//
.paginator
  margin 4em 0 2em
  padding 10px 0 
  font-size 0.825rem
  text-align center      
.page-number     
  margin 0 8px  
  &:hover        
    color $thr-clr 


.prev  
  float left  
.next  
  float right  
.current    
  color $thr-clr  
  


//item
//
.item	
	font-size 1rem
	overflow hidden
	padding .5em 0 .5em 1em	
	&:hover
		color $thr-clr
		
.item-date		
	float left
	width 20%
	text-align center
	&:hover		
		color $thr-clr

.item-title
	float left
	margin-left 3%		
	width 75%		
	&:hover		
		color $thr-clr



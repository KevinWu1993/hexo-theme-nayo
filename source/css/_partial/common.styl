//
.profile
	border-bottom 1px solid $line-clr
	margin 0 0 2rem 0 
	padding-bottom 16px
	text-align center		
.avatar
	display block
	width 90px
	height 90px
	border-radius 50%
.author
	margin 12px 0  
	text-align center	
	font-size 1.125rem

.social
	text-align center
	



@import "_utils/_variables"
@import "_utils/_iconfont"
@import "_utils/_extend"


@import "_utils/type"
@import "_utils/utils"

@import "_highlight/highlight"

 
html,body
  height 100%
  width 100%
  background $bgr
  letter-spacing .3px
  margin 0 
  padding  0
 
body
  clearfix()  
  overflow-x hidden
  font  300 $font-size $font
  margin 0 
  padding 0
      
@media mq-desktop 
      html
        font-size 20px 

  
a
 text-decoration none   
 transition all .2s ease
 &:link,&:visited,&:active 
   color #333
 &:hover
   color $thr-clr
img
  max-width 100% 
  margin-left auto
  margin-right auto
  border-radius 3px
     
time
  font-size 0.825rem
  font-weight 300
  &:hover   
    color $thr-clr


.page-title   
   text-align center
   display block
   margin-bottom 1.5em
   line-height 10px  
   letter-spacing .6px
   color rgba(0,0,0,.5)
   font-size 1.25rem   
   &:hover
      color $thr-clr

.left
  float left
.right
  float right
.center
  text-align center
 
.mask
  display none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 998
  background rgba(0,0,0,0.2)
  
.back-to-top  
    display none
    position fixed   
    cursor pointer
    z-index 20
    bottom 8%
    left 92%  
    &:hover    
      color $thr-clr     
 


.container    
  margin-top 1.8rem
  padding 0 1.8rem 
  

#main   
    padding-top 10px

.container    
    margin-top 48px
    padding 0 1rem 
  
#main   
    margin 0 auto
    width 52%    
    
#toc
    padding 1.8em 0    
    position absolute
    width 250px   
    height 100%
    top 16%
    left 80%     
    overflow hidden  


  
  
toc = hexo-config("toc")

if toc is false
  #toc
     display none
     
#toc      
  @media mq-mobile 
      display none


::selection 
  background $sub-clr
  color $white

::-webkit-scrollbar 
    width 6px 
    height 6px 
    background-color $gray  
    
::-webkit-scrollbar  
    @media mq-mobile
      width 2px
      height 2px

::-webkit-scrollbar-track  
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)  
    border-radius  2px
    background-color  $white   

::-webkit-scrollbar-thumb  
    border-radius 10px
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,.3)  
    background-color #555
  
  
@import "_partial/header"
@import "_partial/footer"
@import "_partial/post"
@import "_partial/article"
@import "_partial/meta"
@import "_partial/toc"
@import "_partial/common"
@import "_partial/search"


@import "_utils/_animation"

@media mq-mobile 
      @import "_response/mobile"   
@media mq-tablet
      @import "_response/tablet"        

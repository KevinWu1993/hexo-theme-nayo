<% if(theme.donate.enable){  %>

<% var donate = theme.donate %>


<span class="donate-btn iconfont icon-donate "></span>


<div id="donate-box">

	<span class="donate-cancel iconfont icon-cancel"></span>

	<div class="donate-img-box">
		<img id="donate-qr-wechat" class="donate-img no-gallery" src="<%- url_for( donate.wechat ) %>"  alt="Lost">	
		<img id="donate-qr-alipay" class="donate-img no-gallery" src="<%- url_for( donate.alipay ) %>"  alt="Lost">	
	</div>

	<span class="donate-word slideDownMin"><%- donate.word %></span>

	<div class="donate-list fadeIn">
		<span class="iconfont icon-donate-wechat"></span>
		<span class="iconfont icon-donate-alipay"></span>
	</div>

</div>

<% } %>
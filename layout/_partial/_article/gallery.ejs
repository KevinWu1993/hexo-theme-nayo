<% if (post.banner && post.banner.length){ %>
			
				<div class="banner-brg"  style="background-image:url(<%- url_for(post.banner[0]) %>")>
			    	<img class="banner-img" src="<%- url_for(post.banner[0]) %>">
			    </div>	


<% } else if (post.photos && post.photos.length){ %>

	<div class="article-gallery">

		<% for( i in post.photos){%>

			<div class="gallery-box">
				<a class="gallery-brg"  style="background-image:url(<%- url_for(post.photos[i]) %>")>
			    	<img class="gallery-img" src="<%- url_for(post.photos[i]) %>">
			    </a>
		    </div>

	    <%}%>
   </div>
<%}%>